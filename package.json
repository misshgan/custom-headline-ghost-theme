{
    "name": "headline",
    "description": "A Ghost theme",
    "version": "1.0.0",
    "private": true,
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Ghost Foundation",
        "email": "hello@ghost.org",
        "url": "https://ghost.org"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme"
    ],
    "config": {
        "posts_per_page": 7,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 720
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "title_font": {
                "type": "select",
                "options": ["Modern sans-serif", "Elegant serif"],
                "default": "Modern sans-serif"
            },
            "body_font": {
                "type": "select",
                "options": ["Modern sans-serif", "Elegant serif"],
                "default": "Elegant serif"
            },
            "header_style": {
                "type": "select",
                "options": ["Light", "Accent color", "Dark"],
                "default": "Light"
            },
            "white_publication_logo_for_transparent_header": {
                "type": "image"
            },
            "email_signup_text": {
                "type": "text",
                "default": "Don't miss out on the latest news. Sign up now to get access to the library of members-only articles."
            },
            "footer_text": {
                "type": "text"
            },
            "enter_tag_slugs_for_secondary_sections": {
                "type": "text",
                "group": "homepage"
            }, 
			"image_for_first_block_on_the_home_page": {
				"type": "image",
				"group": "homepage"
			},
			"title_for_first_block_on_the_home_page": {
				"type": "text",
				"default": "ACT Climate Labs",
				"group": "homepage"
			},
			"subtitle_for_first_block_on_the_home_page": {
				"type": "text",
				"default": "ACT are on a mission to supercharge the effectiveness of climate communications. We run impactful creative campaigns, and provide strategic advice for members.",
				"group": "homepage"
			},
			"image_for_second_block_on_the_home_page": {
				"type": "image",
				"group": "homepage"
			},
			"text_for_second_block_on_the_home_page": {
				"type": "text",
				"default": "We work with NGOs, good businesses and other organisations trying to reach mainstream audiences with positive climate messages. Our mission is to supercharge the effectiveness of climate communications with advertising techniques. We want to make climate action mainstream. We can only achieve this with climate communicators breaking out of their bubbles and engaging a key target audience: the Persuadables â€“ 69% of the UK population who are neither climate activists nor climate deniers.",
				"group": "homepage"
			}
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "@tryghost/shared-theme-assets": "1.2.0",
        "autoprefixer": "10.4.12",
        "beeper": "2.1.0",
        "cssnano": "5.1.13",
        "gscan": "4.34.0",
        "gulp": "4.0.2",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.1",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "postcss": "8.4.17",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.0"
    }
}
