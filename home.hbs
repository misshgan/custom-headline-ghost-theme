        <section class="gh-topic gh-topic-grid">
            <h2 class="gh-topic-name">
                <a>Latest</a>
            </h2>

            <div class="gh-topic-content">
                {{#get "posts" include="tags,authors" limit="1"}}
                    {{#foreach posts}}
                        {{> "loop-grid"}}
                    {{/foreach}}
                {{/get}}
            </div>
        </section>

        {{#get "tags" filter="slug:guides"}}
            {{#foreach tags}}
                {{> "topic-grid"}}
            {{/foreach}}
        {{/get}}

        {{#get "tags" filter="slug:climate-communications"}}
            {{#foreach tags}}
                {{> "topic-grid"}}
            {{/foreach}}
        {{/get}}

        {{#get "tags" filter="slug:case-studies"}}
            {{#foreach tags}}
                {{> "topic-grid"}}
            {{/foreach}}
        {{/get}}

        {{#if @custom.enter_tag_slugs_for_secondary_sections}}
            {{#get "tags" filter="slug:[{{@custom.enter_tag_slugs_for_secondary_sections}}]"}}
                {{#if tags}}
                    <div class="gh-topic-list">
                        {{#foreach tags}}
                            {{> "topic-minimal"}}
                        {{/foreach}}
                    </div>
                {{/if}}
            {{/get}}
        {{/if}}

