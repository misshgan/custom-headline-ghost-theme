{{!< default}}

<main class="gh-main gh-outer">
    <div class="gh-inner">
		<section class="custom-hero-block">
			<div class="custom-hero-block__left">
				<h1 class="custom-hero-block__title">{{@custom.title_for_first_block_on_the_home_page}}</h1>
				<p class="custom-hero-block__description">{{@custom.subtitle_for_first_block_on_the_home_page}}</p>
				<a href="{{@site.url}}/join-us/" class="custom-hero-block__link">Join Us For Free</a>
			</div>
			<div class="custom-hero-block__right">
				{{#if @custom.image_for_first_block_on_the_home_page}}
					<img src={{@custom.image_for_first_block_on_the_home_page}} alt="ACT Climate Labs photo">
				{{else}}
					<img src={{asset "assets/images/image002.png"}} alt="ACT Climate Labs photo">
				{{/if}}
			</div>
		</section>

		<section class="home-custom-block-2">
			<div class="home-custom-block-2__left">
				{{#if @custom.image_for_second_block_on_the_home_page}}
					<img src={{@custom.image_for_second_block_on_the_home_page}} alt="ACT Climate Labs photo">
				{{else}}
					<img src={{asset "assets/images/image-12.png"}} alt="ACT Climate Labs photo">
				{{/if}}
			</div>
			<div class="home-custom-block-2__right">
				<p class="home-custom-block-2__description">{{@custom.text_for_second_block_on_the_home_page}}</p>
				<a href="{{@site.url}}/about/" class="home-custom-block-2__link">More about us ></a>
			</div>
		</section>

